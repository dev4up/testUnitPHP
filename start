#!/bin/sh
echo Downloading and installing the latest version of the script...
./phpunit --version || (wget -O phpunit https://phar.phpunit.de/phpunit-9.phar && chmod +x phpunit && ./phpunit --version)
echo "To run tests\n\n./phpunit tests"
